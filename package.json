    "@types/js-yaml": "^4.0.4",
    "@types/marked": "^3.0.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "autoprefixer": "^10.3.7",
