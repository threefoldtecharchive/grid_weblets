{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "build:app": "yarn build && sh scripts/build.sh && cd playground && yarn build",
    "serve:app": "yarn build && sh scripts/build.sh && cd playground && yarn serve",
    "dev": "webpack serve --content-base public",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check-eslint": "eslint .eslintrc.js .",
    "check-prettier": "npx prettier .prettierrc .",
    "deps": "sh scripts/install_deps.sh",
    "serve": "serve ./dist",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,svelte,yaml}": "eslint --fix",
    "*.{js,ts,css,scss,md,svelte,yaml}": "prettier --write"
  },
  "devDependencies": {
